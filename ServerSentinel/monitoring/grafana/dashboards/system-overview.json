{
  "dashboard": {
    "title": "ServerSentinel - System Overview",
    "tags": ["serversentinel", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ss_requests_total[5m]))",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Alerts Created",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(ss_alerts_created_total)",
            "legendFormat": "Total Alerts"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "ss_ws_connections",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Metrics Ingested",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ss_metrics_ingested_total[5m]))",
            "legendFormat": "Metrics/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Request Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ss_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "Alerts by Severity",
        "type": "graph",
        "targets": [
          {
            "expr": "ss_open_alerts",
            "legendFormat": "{{severity}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      }
    ],
    "refresh": "10s",
    "time": {"from": "now-1h", "to": "now"}
  }
}
